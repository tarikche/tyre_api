<div class='mt-28 flex flex-col items-center justify-center w-full'>
    {% if results is empty %}
        <p>No results found.</p>
    {% else %}
        <div class='w-1/2'>
            {% for tyre in results %}
                
                <div class="flex justify-between shadow-md w-full">
                    <div>
                        <img src="images/tyre1.png" alt="Tall ." class="w-44">
                    </div>
                    <div class='flex flex-col justify-center w-1/4'>
                        <p class="mt-1 text-base font-medium text-gray-900">{{ tyre.name }}</p>
                        <h3 class="mt-4 text-sm text-gray-700 uppercase">{{ tyre.brand }}</h3>
                        <h1 class="mt-1 text-lg font-medium text-gray-900">______________</h1>
                    </div>
                    <div class='flex flex-col justify-center'>
                        <h3 class="mt-4 text-sm text-gray-700">_____________</h3>
                        <p class="mt-1 text-lg font-medium text-gray-900">___________</p>
                        
                    </div>
                    <div class='flex flex-col justify-evenly items-center pr-9'>
                        <form class='flex flex-col w-32 justify-evenly items-center'  method="post">
                            <input type="hidden" name="tyre_id" value="{{ tyre.id }}">
                            <label class='text-center text-lg font-bold' for="quantity">Quantity</label>
                            <input  class='text-center w-1/3 my-4 text-lg' data="{{ tyre.id }}" type="number" name="quantity" id="quantity" value="1" min="1">
                            <button class='bg-blue-500 p-2 rounded hover:bg-blue-600 text-white' type="submit" data-action='add-to-cart'>Add to Cart</button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>

